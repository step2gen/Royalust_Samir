                <div class="form-group mb-3 mr-1">
                     <button id="reset-pass-button" type="reset" class="btn btn-lg btn-primary" style="display:none" onclick="onPasswordReset()">
                        <i class="fa fa-times" style="font-size: 20px;;" aria-hidden="true"></i>
                    </button>
                </div>
                <div class="form-group mb-3 mr-1">
                    <button id="update-pass-button" type="submit" class="btn btn-lg btn-primary" style="display:none">
                        <i class="fa fa-floppy-o" style="font-size: 20px;" aria-hidden="true"></i>
                    </button>
                </div>
                <div class="form-group mb-3 mr-1">
                    <button type="button" class="btn btn-md btn-primary" id="password_edit" onclick="onEditPassword()"><i class="fa fa-pencil" style="font-size: 20px;"></i></button>
