<div class="row py-3 mx-0" style="justify-content: center;">
    <div class="col-md-10">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <label asp-for="Input.OldPassword" class="label"></label>
                <input asp-for="Input.OldPassword" class="form-control" id="password_oldPass" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.NewPassword" class="label"></label>
                <input asp-for="Input.NewPassword" class="form-control" id="password_newPass" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.ConfirmPassword" class="label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" id="password_ReNewPass" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

